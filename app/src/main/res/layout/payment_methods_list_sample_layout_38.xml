<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:layout_marginBottom="15dp"
    android:layout_marginHorizontal="10dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivPaymentMethodDropDownLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/il_placeholder" />
    
    <TextView
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/tvPaymentMethodNameDropDown"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Payment Method"/>


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/rbGroupPaymentMethods">

        <RadioButton
            android:id="@+id/rbPaymentMethodDropDown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:buttonTint="@color/PrimaryAppColor"
            android:gravity="center_vertical" />

    </RadioGroup>



</LinearLayout>



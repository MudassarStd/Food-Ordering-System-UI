<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with border -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="5dp" android:color="@color/white"
                />
            <corners android:radius="20dp"/>
            <gradient android:startColor="@color/white" android:endColor="@color/fade_gray_color"/>
        </shape>
    </item>
    <!-- Profile picture clipped to fit within the shape -->
    <item>
        <shape>
            <stroke android:width="5dp" android:color="@color/white"
                />
            />
        </shape>
    </item>
</layer-list>
